<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="#000000"
    tools:context="com.courierkraft.mobile.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imageView_btn1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="2dp"
                                android:hapticFeedbackEnabled="false"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/button_shape_1" />

                            <TextView
                                android:id="@+id/textView_btn1"
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="0.5"
                                android:autoSizeMaxTextSize="24sp"
                                android:autoSizeMinTextSize="4sp"
                                android:autoSizeStepGranularity="2sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/gugi"
                                android:gravity="center"
                                android:maxLines="2"
                                android:rotation="-45"
                                android:text="1"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView_btn1"
                                app:layout_constraintEnd_toEndOf="@+id/imageView_btn1"
                                app:layout_constraintStart_toStartOf="@+id/imageView_btn1"
                                app:layout_constraintTop_toTopOf="@+id/imageView_btn1" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imageView_btn2"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginEnd="2dp"
                                android:hapticFeedbackEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/button_shape_2" />

                            <TextView
                                android:id="@+id/textView_btn2"
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginEnd="24dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="0.5"
                                android:autoSizeMaxTextSize="24sp"
                                android:autoSizeMinTextSize="4sp"
                                android:autoSizeStepGranularity="2sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/gugi"
                                android:gravity="center"
                                android:maxLines="2"
                                android:rotation="45"
                                android:text="2"
                                android:textSize="24sp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView_btn2"
                                app:layout_constraintEnd_toEndOf="@+id/imageView_btn2"
                                app:layout_constraintStart_toStartOf="@+id/imageView_btn2"
                                app:layout_constraintTop_toTopOf="@+id/imageView_btn2" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imageView_btn3"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginBottom="2dp"
                                android:hapticFeedbackEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/button_shape_3" />

                            <TextView
                                android:id="@+id/textView_btn3"
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="24dp"
                                android:layout_weight="0.5"
                                android:autoSizeMaxTextSize="24sp"
                                android:autoSizeMinTextSize="4sp"
                                android:autoSizeStepGranularity="2sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/gugi"
                                android:gravity="center"
                                android:maxLines="2"
                                android:rotation="45"
                                android:text="3"
                                android:textSize="24sp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView_btn3"
                                app:layout_constraintEnd_toEndOf="@+id/imageView_btn3"
                                app:layout_constraintStart_toStartOf="@+id/imageView_btn3"
                                app:layout_constraintTop_toTopOf="@+id/imageView_btn3" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imageView_btn4"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="2dp"
                                android:backgroundTintMode="multiply"
                                android:hapticFeedbackEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/button_shape_4" />

                            <TextView
                                android:id="@+id/textView_btn4"
                                style="@style/Widget.AppCompat.TextView"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="24dp"
                                android:layout_marginBottom="24dp"
                                android:layout_weight="0.5"
                                android:autoSizeMaxTextSize="24sp"
                                android:autoSizeMinTextSize="4sp"
                                android:autoSizeStepGranularity="2sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/gugi"
                                android:gravity="center"
                                android:maxLines="2"
                                android:rotation="315"
                                android:text="4"
                                android:textSize="24sp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView_btn4"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/imageView_btn4"
                                app:layout_constraintTop_toTopOf="@+id/imageView_btn4" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/center_button_layout"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:src="@drawable/button_shape_round"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:duplicateParentState="true"
                android:scaleType="centerInside"
                android:src="@drawable/applogo"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView_dimmer1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000000"
            android:src="@drawable/black_circle_shape"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>